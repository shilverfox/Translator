<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_video_detail_root"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_video_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="268dp"
        android:layout_marginRight="204dp">

        <ImageView
            android:id="@+id/iv_video_detail_icon"
            android:layout_width="864dp"
            android:layout_height="540dp"
            android:scaleType="fitXY"
            android:layout_marginTop="100dp"
            android:src="@drawable/default_image"
            android:background="@drawable/coupon_shadow"/>

        <TextView
            android:id="@+id/iv_video_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="48sp"
            android:paddingTop="20dp"
            android:text="片名"
            android:layout_marginLeft="84dp"
            android:layout_alignTop="@+id/iv_video_detail_icon"
            android:layout_toRightOf="@+id/iv_video_detail_icon"/>

        <TextView
            android:id="@+id/iv_video_detail_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:text="导演"
            android:layout_marginTop="40dp"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_name"/>

        <TextView
            android:id="@+id/iv_video_detail_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:text="主演"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_director"/>

        <TextView
            android:id="@+id/iv_video_detail_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:layout_marginTop="40dp"
            android:text="片长"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_actor"/>

        <TextView
            android:id="@+id/iv_video_detail_play_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:text="上映时间"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_video_time"/>

        <RelativeLayout
            android:id="@+id/btn_video_detail_play"
            android:layout_width="386dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_play_date"
            android:background="@drawable/button_bg"
            android:layout_marginTop="94dp"
            android:layout_marginLeft="-10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:text="播放"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/play_icon"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/iv_video_detail_summary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:text="剧情简介"
        android:layout_below="@+id/view_video_detail_content"
        android:layout_alignLeft="@+id/view_video_detail_content"
        android:layout_alignRight="@+id/view_video_detail_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_video_detail_summary_title"
        android:layout_alignRight="@+id/iv_video_detail_summary_title"
        android:layout_below="@+id/iv_video_detail_summary_title">
        <TextView
            android:id="@+id/iv_video_detail_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="28dp"
            android:textSize="16sp"
            android:text="剧情简介剧情简介剧情简介剧情简介剧情简介剧情简介剧情简介"/>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/view_video_detail_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>