<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="holo_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <!-- 底部弹出Dialog动画 -->
    <style name="dialog_push_from_bottom_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_up_out</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_push_from_bottom_animation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="custom_dialog_white" parent="custom_dialog">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- 登录中的用户协议 -->
    <style name="UserAgreementStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">@dimen/login_input_margin</item>
        <item name="android:layout_marginRight">@dimen/login_input_margin</item>
    </style>

    <style name="csdj_goods_list_item_tab_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="item_tab_linearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_11_666666">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="style_14_666666">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="login_input_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">@dimen/login_input_height</item>
        <item name="android:textColorHint">@color/gray_999</item>
        <item name="android:textColor">@color/gray_666</item>
    </style>

    <!-- 登陆模块的按钮 -->
    <style name="login_button_style">
        <item name="android:layout_marginLeft">@dimen/login_button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/login_button_margin_horizontal</item>
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleColor">#585858</item>
        <item name="mrl_rippleDelayClick">false</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleRoundedCorners">@dimen/login_btn_radius</item>
    </style>

    <!-- 通用tab样式，查询结果，我的消息 -->
    <style name="common_tab_style">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12sp</item>
        <item name="android:background">@color/root_bg_color</item>
        <item name="tl_divider_color">@color/divider_line</item>
        <item name="tl_divider_padding">12dp</item>
        <item name="tl_divider_width">1sp</item>
        <item name="tl_textSelectColor">@color/app_word_red</item>
        <item name="tl_textUnselectColor">#66000000</item>
        <item name="tl_textsize">16sp</item>
        <item name="tl_indicator_color">@color/root_bg_color</item>
        <item name="tl_indicator_style">BLOCK</item>
    </style>

    <style name="NiceDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DefaultAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/exit_anim</item>
    </style>

    <!-- 头像选择相关 -->
    <style name="PhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <!--设置图片选择界面标题栏以及底栏颜色-->
        <item name="colorPrimary">#38393E</item>
        <!--设置图片选择界面状态栏颜色-->
        <item name="colorPrimaryDark">#2F3034</item>
        <item name="actionBarSize">56dip</item>
    </style>
    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="actionBarSize">56dip</item>
    </style>


    <style name="main_tab_text">
        <item name="tl_textsize">14sp</item>
        <item name="tl_tab_padding">15dp</item>
    </style>

    <style name="main_bottom_base_info">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="common_button_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="main_page_banner">
        <item name="indicator_height">10dp</item>
        <item name="indicator_margin">6dp</item>
        <item name="indicator_width">10dp</item>
    </style>

    <style name="main_page_recommend_label">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <style name="main_page_recommend_item_text">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="gallery_item_text">
        <item name="android:paddingTop">26dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="album_disc_title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="album_disc_play_item_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="album_disc_play_item_container">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="album_disc_play_album_text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="album_disc_play_album_info">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="album_detail_play_album_container">
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="album_feed_item_desc">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="album_feed_item_name">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

</resources>
