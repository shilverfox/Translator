<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底部弹出Dialog动画 -->
    <style name="dialog_push_from_bottom_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_up_out</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_push_from_bottom_animation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="custom_dialog_white" parent="custom_dialog">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- 登录中的用户协议 -->
    <style name="UserAgreementStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="csdj_goods_list_item_tab_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="item_tab_linearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_11_666666">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="style_14_666666">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="login_input_text_style">
        <item name="android:textColor">#47b34f</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
