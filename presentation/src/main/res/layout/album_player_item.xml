<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/root_bg_color"
    android:orientation="horizontal"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_album_play_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ffffffffffffffff"/>

    <TextView
        android:id="@+id/tv_album_play_item_duration"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="22"/>

    <ImageView
        android:id="@+id/iv_album_play_item_play"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/daoyan_icon"/>

    <ImageView
        android:id="@+id/iv_album_play_item_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/default_head"/>

</LinearLayout>