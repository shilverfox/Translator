<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_album_play_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ffffffffffffffff"/>

    <TextView
        android:id="@+id/tv_album_play_item_duration"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="22"/>

    <FrameLayout
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_album_play_item_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/album_play_icon"/>

        <com.jbsx.customview.JDProgressBar
            android:id="@+id/pb_album_play_item_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </FrameLayout>


    <ImageView
        android:id="@+id/iv_album_play_item_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:src="@drawable/default_head"/>

</LinearLayout>