<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_myinfo_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_myinfo_item_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_myinfo_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_myinfo_item_icon"
            android:drawablePadding="5dp"
            android:text="测试测试"
            android:textColor="#b3000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_myinfo_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myinfo_item_title"
            android:layout_alignLeft="@id/tv_myinfo_item_title"
            android:text="作者"
            android:textColor="#b3000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_myinfo_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myinfo_item_author"
            android:layout_alignLeft="@id/tv_myinfo_item_title"
            android:text=""
            android:textColor="#b3000000"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/myinfo_item_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/divider_line"/>

</LinearLayout>