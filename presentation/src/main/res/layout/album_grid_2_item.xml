<?xml version="1.0" encoding="utf-8"?>
<!-- 视频列表项，一行2个 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_video_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="25dp">


    <ImageView
        android:id="@+id/iv_video_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/iv_video_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_video_item_image"
        android:layout_alignRight="@id/iv_video_item_image"
        android:text=""
        android:textColor="@color/white"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginBottom="4dp"
        android:textSize="11sp"/>


    <TextView
        android:id="@+id/iv_video_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_video_item_image"
        android:text=""
        android:textColor="@color/alpha_e6_0"
        android:paddingTop="12.5dp"
        android:maxLines="1"
        android:textSize="13sp"/>

</RelativeLayout>