<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/my_comment_item_header_view" />
    <include layout="@layout/album_grid_1_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_add_comment"
                android:text="20"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_nb_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_comment_count"
                android:drawableLeft="@drawable/icon_thumb"
                android:layout_marginLeft="16dp"
                android:text="20"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_comment_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>