<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_album"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_padding_horizontal"
    android:paddingRight="@dimen/common_padding_horizontal"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_album_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="21dp"
        android:text="推荐专题"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <com.zhouyou.recyclerview.XRecyclerView
        android:id="@+id/rv_floor_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false" />
</LinearLayout>