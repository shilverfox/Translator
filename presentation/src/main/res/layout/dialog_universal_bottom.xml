<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dj_dialog_bottom_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_universal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="提示"
        android:textColor="#333333"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/tv_dialog_universal_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="内容"
        android:textColor="#333333"
        android:textSize="14dip"
        android:layout_below="@+id/tv_dialog_universal_title"/>


    <TextView
        android:id="@+id/tv_dialog_universal_msg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-23dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="内容"
        android:textColor="@color/black_333"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_below="@+id/tv_dialog_universal_msg"/>

    <LinearLayout
        android:id="@+id/ll_dialog_universal_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tv_dialog_universal_msg2"
        android:layout_marginBottom="45.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_dialog_universal_content"
        android:layout_marginTop="-45.5dp"
        >

    <View
        android:id="@+id/view_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_dialog_universal_operate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/dj_dialog_bottom_btn_bg">



        <LinearLayout
            android:id="@+id/ll_dialog_universal_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_universal_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="17dip" />

            <View
                android:id="@+id/v_dialog_btn1_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#e8e8e8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_universal_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_universal_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textSize="17dip" />

            <View
                android:id="@+id/v_dialog_btn2_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#e8e8e8" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dialog_universal_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="按钮"
            android:textSize="17dip" />
    </LinearLayout>

    </LinearLayout>


</RelativeLayout>