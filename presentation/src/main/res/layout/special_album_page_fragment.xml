<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/root_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rv_floor_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/divider_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"/>
    </LinearLayout>

    <com.zhouyou.recyclerview.XRecyclerView
        android:id="@+id/rv_floor_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rv_floor_sort"
        android:layout_marginLeft="@dimen/common_padding_horizontal"
        android:layout_marginRight="@dimen/common_padding_horizontal"/>
</RelativeLayout>