<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_main_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <include layout="@layout/widget_title_bar" />
        </FrameLayout>

        <!-- status bar -->
        <com.jbsx.customview.TitleStatusHeightLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/statusheight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_title_height"
                android:alpha="1"
                android:visibility="visible" />
        </com.jbsx.customview.TitleStatusHeightLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_activity_navi_height">

            <include layout="@layout/org_logo_view"/>

            <com.flyco.tablayout.SlidingCommonTabLayout
                android:id="@+id/tab_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/main_tab_text"
                android:layout_toLeftOf="@+id/btn_main_search"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/main_activity_navi_padding_right"
                tl:tl_textSelectColor="@color/title_bar_end"
                tl:tl_textUnselectColor="#ffffff"
                tl:tl_underline_color="#DDDDDD"
                tl:tl_textBold="SELECT"
                tl:tl_show_tab_background="true"
                tl:tl_tab_background_color="#ffffff"
                tl:tl_indicator_width_equal_title="true"
                tl:tl_tab_space_equal="false"
                tl:tl_underline_height="0dp"/>

            <FrameLayout
                android:id="@+id/btn_main_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="@dimen/main_activity_search_button_padding_right"
                android:paddingTop="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <include layout="@layout/common_button_view"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_main_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_main_title_container"
        android:paddingBottom="@dimen/main_bottom_margin"
        android:layout_marginBottom="0dp">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_margin"
            android:paddingLeft="@dimen/main_activity_bottom_padding"
            android:paddingRight="@dimen/main_activity_bottom_padding"
            android:background="@drawable/bottom_bg"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_device_info"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:text="终端编号"
                style="@style/main_bottom_base_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/btn_main_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <include layout="@layout/common_button_view"/>
            </FrameLayout>

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:paddingRight="10dp"
                style="@style/main_bottom_base_info"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_main_back"
                android:format12Hour="yyyy/MM/dd EEEE HH:mm"/>

        </RelativeLayout>
    </RelativeLayout>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:format="%s"
        android:textSize="18sp"/>

    <FrameLayout
        android:id="@+id/view_main_activity_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>