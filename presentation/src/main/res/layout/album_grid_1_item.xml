<?xml version="1.0" encoding="utf-8"?>
<!-- 视频列表项，一行1个 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_video_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_padding_horizontal">

    <ImageView
        android:id="@+id/iv_video_item_image"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/timg" />

    <TextView
        android:id="@+id/iv_video_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_video_item_image"
        android:layout_alignRight="@id/iv_video_item_image"
        android:text="30"
        android:textColor="#ff0000"
        android:textSize="50sp" />


    <TextView
        android:id="@+id/iv_video_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_video_item_image"
        android:text=""
        android:textSize="13sp"
        android:layout_marginLeft="@dimen/common_padding_horizontal"
        android:textColor="#cc020202" />

    <TextView
        android:id="@+id/iv_video_item_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_video_item_image"
        android:layout_alignLeft="@id/iv_video_item_description"
        android:layout_below="@id/iv_video_item_description"
        android:gravity="bottom"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/app_word_red" />

</RelativeLayout>