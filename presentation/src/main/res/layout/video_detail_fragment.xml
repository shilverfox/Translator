<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_video_detail_root"
    android:background="@color/title_bar_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_video_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_video_detail_icon"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/album_cover"/>

        <TextView
            android:id="@+id/iv_video_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="建党伟业"
            android:layout_toRightOf="@+id/iv_video_detail_icon"/>

        <TextView
            android:id="@+id/iv_video_detail_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="导演"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_name"/>

        <TextView
            android:id="@+id/iv_video_detail_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="主演"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_director"/>

        <TextView
            android:id="@+id/iv_video_detail_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="片长"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_actor"/>

        <TextView
            android:id="@+id/iv_video_detail_play_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="上映时间"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_video_time"/>

        <TextView
            android:id="@+id/btn_video_detail_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="播放"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_play_date"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/iv_video_detail_summary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="剧情简介"
        android:layout_below="@+id/view_video_detail_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_video_detail_summary_title">
        <TextView
            android:id="@+id/iv_video_detail_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="剧情简介剧情简介剧情简介剧情简介剧情简介剧情简介剧情简介"/>
    </ScrollView>
</RelativeLayout>