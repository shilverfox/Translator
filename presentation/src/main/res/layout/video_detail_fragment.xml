<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_video_detail_root"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_video_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="134dp"
        android:layout_marginRight="102dp">

        <ImageView
            android:id="@+id/iv_video_detail_icon"
            android:layout_width="432dp"
            android:layout_height="270dp"
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            android:src="@drawable/default_image"
            android:background="@drawable/coupon_shadow"/>

        <TextView
            android:id="@+id/iv_video_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:text="片名"
            android:layout_marginLeft="42dp"
            android:layout_alignTop="@+id/iv_video_detail_icon"
            android:layout_toRightOf="@+id/iv_video_detail_icon"/>

        <TextView
            android:id="@+id/iv_video_detail_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="导演"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_name"/>

        <TextView
            android:id="@+id/iv_video_detail_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="主演"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_director"/>

        <TextView
            android:id="@+id/iv_video_detail_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="片长"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_actor"/>

        <TextView
            android:id="@+id/iv_video_detail_play_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="上映时间"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_video_time"/>

        <RelativeLayout
            android:id="@+id/btn_video_detail_play"
            android:layout_width="193dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/iv_video_detail_name"
            android:layout_below="@+id/iv_video_detail_play_date"
            android:background="@drawable/button_bg"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="-5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="播放"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/play_icon"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/iv_video_detail_summary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:text="剧情简介"
        android:layout_below="@+id/view_video_detail_content"
        android:layout_alignLeft="@+id/view_video_detail_content"
        android:layout_alignRight="@+id/view_video_detail_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_video_detail_summary_title"
        android:layout_alignRight="@+id/iv_video_detail_summary_title"
        android:layout_below="@+id/iv_video_detail_summary_title">
        <TextView
            android:id="@+id/iv_video_detail_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="14dp"
            android:textSize="10sp"
            android:text="剧情简介剧情简介剧情简介剧情简介剧情简介剧情简介剧情简介"/>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/view_video_detail_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>