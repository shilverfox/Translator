<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论内容"/>

    <RelativeLayout
        android:id="@+id/layout_comment_video"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <include layout="@layout/album_grid_1_item"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_add_comment"
            android:text="20"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_nb_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_comment_count"
            android:drawableLeft="@drawable/icon_thumb"
            android:layout_marginLeft="16dp"
            android:text="20"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_comment_delete"
            android:text="20"/>

        <TextView
            android:id="@+id/tv_comment_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="删除"/>
    </RelativeLayout>
</LinearLayout>