<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_album_player_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/album_detail_padding"
    android:paddingRight="@dimen/album_detail_padding"
    android:background="@drawable/background">

    <!-- 倒影图片 ，高度为原图*1.5，（整体图片高度/3 + 8dp的间隔高度），设置marginTop -->
    <ImageView
        android:id="@+id/iv_album_play_cover_refection"
        android:layout_width="@dimen/album_detail_cover_width"
        android:layout_height="@dimen/album_detail_cover_width"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/album_detail_cover_reflection_height"
        android:layout_alignLeft="@+id/iv_album_play_cover"
        android:layout_alignRight="@+id/iv_album_play_cover"
        android:layout_alignTop="@+id/iv_album_play_cover"/>

    <ImageView
        android:id="@+id/iv_album_play_cover"
        android:layout_width="@dimen/album_detail_cover_width"
        android:layout_height="@dimen/album_detail_cover_width"
        android:layout_gravity="center_vertical|right"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/iv_album_play_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/album_detail_play_album_container"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/iv_album_play_cover"
        android:layout_alignTop="@+id/iv_album_play_cover"
        android:layout_alignBottom="@+id/iv_album_play_cover">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_album_play_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/album_disc_play_album_text"
                android:textStyle="bold"
                android:text="名字名字"/>

            <TextView
                android:id="@+id/tv_album_play_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/album_disc_play_album_info"
                android:text="唱片公司"/>

            <TextView
                android:id="@+id/tv_album_play_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/album_disc_play_album_info"
                android:text="类型"/>

            <TextView
                android:id="@+id/tv_album_play_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/album_disc_play_album_info"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="艺术家"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:id="@+id/view_album_play_fragment_disc_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/view_album_player_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>