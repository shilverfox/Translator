<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_album_player_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="130dp"
    android:paddingRight="130dp"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/iv_album_play_cover"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center_vertical|right"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/iv_album_play_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_album_play_cover"
        android:layout_alignTop="@+id/iv_album_play_cover"
        android:layout_alignBottom="@+id/iv_album_play_cover">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_album_play_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="名字名字"/>

            <TextView
                android:id="@+id/tv_album_play_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="唱片公司"/>

            <TextView
                android:id="@+id/tv_album_play_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="类型"/>

            <TextView
                android:id="@+id/tv_album_play_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="艺术家"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:id="@+id/view_album_play_fragment_disc_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>